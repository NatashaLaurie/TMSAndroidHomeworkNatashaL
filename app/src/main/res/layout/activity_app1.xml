<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".App1Activity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="338dp"
        android:layout_height="65dp"
        android:layout_marginBottom="532dp"
        android:ems="10"
        android:hint="@string/app1_edit_text_hint"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#221E1E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btnTextFormat"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnTextFormat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="444dp"
        android:background="#C877D6"
        android:fontFamily="sans-serif"
        android:text="@string/btn_format"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/formattedText" />

    <TextView
        android:id="@+id/formattedText"
        android:layout_width="338dp"
        android:layout_height="65dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="348dp"
        android:textColor="#020101"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>